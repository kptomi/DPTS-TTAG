<Window x:Class="DPTS.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Direction-Preserving Trajectory Simplification" Height="350" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36" />
            <RowDefinition Height="36" />
            <RowDefinition Height="36" />
            <RowDefinition Height="144" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="75" />
        </Grid.ColumnDefinitions>
        <Label Content="Data source:" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Center" />
        <TextBox Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" HorizontalAlignment="Left" Height="24" IsReadOnly="True" Margin="5" Text="{Binding PathToDataRoot}" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="510" />
        <Button Command="{Binding BrowseDataFolderCommand}" Content="Browse..." Grid.Column="4" Grid.Row="0" Height="24" IsEnabled="False" Margin="5" VerticalAlignment="Center" Width="65" />
        <Button Command="{Binding ReadAndLoadCommand}" Content="Load datas" Grid.Column="0" Grid.Row="1" Height="24" IsEnabled="{Binding IsOpenEnabled, Mode=OneWay}" Margin="5" />
        <Label Content="Limit:" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Margin="5" />
        <ComboBox Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" HorizontalContentAlignment="Right" ItemsSource="{Binding ObservableSizes, Mode=OneTime}" Margin="5" SelectedIndex="{Binding SelectedSizeIndex, Mode=OneWayToSource}" Text="{Binding PathToDataRoot, Mode=OneWay}" VerticalAlignment="Center" Width="40" />
        <Label Content="number of trajectories should be read" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Right" Margin="5" />
        <TextBox AcceptsReturn="True" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" HorizontalAlignment="Left" IsEnabled="False" Margin="5" Text="{Binding OriginalTrajectoryLengths, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Center" Width="560" />
        <Button Command="{Binding SimplifyBySPCommand}" Content="SP alg." Grid.Column="0" Grid.Row="3" IsEnabled="{Binding DataAlreadyReaded, Mode=OneWay}" Margin="3" />
        <TextBox Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3" HorizontalAlignment="Left" IsEnabled="False" Margin="5" Text="{Binding SimplifiedOptimalTrajectoryLengths, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Center" Width="560" />
        <StatusBar Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="4">
            <StatusBarItem>
                <Label Content="{Binding StatusMessage}" Padding="3" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
